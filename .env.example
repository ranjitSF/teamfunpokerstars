# Firebase Configuration (Get from Firebase Console)
VITE_FIREBASE_API_KEY=your_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id

# Firebase Admin (for server-side - Get from Firebase Service Account)
FIREBASE_ADMIN_PROJECT_ID=your_project_id
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key\n-----END PRIVATE KEY-----\n"
FIREBASE_ADMIN_CLIENT_EMAIL=firebase-adminsdk@your_project.iam.gserviceaccount.com

# Database (PostgreSQL connection string)
DATABASE_URL=postgresql://username:password@host:5432/database_name

# Email Configuration (for reminders)
# For Gmail: Use app-specific password from https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_specific_password
FROM_EMAIL=noreply@pokerrankings.com

# Application Settings
APP_URL=http://localhost:3000
VITE_API_URL=http://localhost:3001/api
PORT=3001
NODE_ENV=development

# Vercel Cron Secret (Generate a random string for production)
CRON_SECRET=your_random_secret_string
